{
    "version": 6,
    "configurePresets": [
        {
            "name": "base",
            "hidden": true,
            "inherits": [
                "vcpkg"
            ],
            "cacheVariables": {
                "X_VCPKG_APPLOCAL_DEPS_INSTALL": true
            }
        },
        {
            "name": "base-linux",
            "hidden": true,
            "inherits": [
                "base"
            ],
            "environment": {
                "VCPKG_ROOT": "/vcpkg",
                "PATH": "$env{VCPKG_ROOT}:$penv{PATH}"
            },
            "condition":{
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            }
        },
        {
            "name": "base-windows",
            "hidden": true,
            "inherits": [
                "base"
            ],
            "environment": {
                "VCPKG_ROOT": "C:/vcpkg",
                "PATH": "$env{VCPKG_ROOT};$penv{PATH}"
            },
            "condition":{
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            }
        },
        {
            "name": "linux-dbg",
            "inherits": [
                "base-linux",
                "debug"
            ]
        },
        {
            "name": "linux-rel",
            "inherits": [
                "base-linux",
                "release"
            ],
            "cacheVariables": {
                "VCPKG_TARGET_TRIPLET": "x64-linux-release"
            }
        },
        {
            "name": "windows-dbg",
            "inherits": [
                "base-windows",
                "debug"
            ]
        },
        {
            "name": "windows-rel",
            "inherits": [
                "base-windows",
                "release"
            ],
            "cacheVariables": {
                "VCPKG_TARGET_TRIPLET": "x64-windows-release"
            }
        }
    ]
}
